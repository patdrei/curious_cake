<div class="text-center">
  <h1><%= @cake.name  %></h1>
    <% if @cake.photo.attached? %>
      <div class="row justify-content-center">
        <%= cl_image_tag @cake.photo.key, height: 300, width: 400, crop: :fill %>
      </div>
    <% end %>
  <div class="row justify-content-center mt-3">
    <div class=" row justify-space-around">
      <% @payments.each_with_index do |payment, i| %>
        <div class="label-<%=((i+1) % 2)+1%> m-1"> <%=  payment %> </div>
      <% end %>
    </div>
  </div>
  <div class="mt-3">
    <p><%= @cake.description  %></p>
  </div>
  <div class="mt-3">
    <p><%= @cake.calculated_slices ? @cake.calculated_slices : @cake.available_slices %></p>
  </div>
  <div class="row justify-content-center">
    <div class="cake-button pt-1 pb-1">
      <%= link_to "Request this Cake", new_cake_request_path(@cake) %>
    </div>
    </div>
    </div>
<% if @owner %>

    <form class="form-inline w-100 mt-3">
      <%= link_to cake_requests_path(@cake), { class: "btn btn-primary w-100" } do %>
    <span class="label label-primary">My Cake Requests</span>
  <% end %>
  </form>

  <form class="form-inline w-100 mt-2">
    <%= link_to cake_path(@cake), { class: "btn btn-outline-danger w-100", method: "delete", data: { confirm: "Are you sure, you want to delete this cake?" }} do %>
  <span class="label label-success">Delete Cake</span>
<% end %>
</form>

<% end %>




