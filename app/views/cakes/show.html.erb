<div class="text-center">
  <div class="outside-border outside-shadow outside-pink p-2 d-flex flex-column align-items-center">
    <h1 class="page-inline-headers mt-3"><%= @cake.name  %></h1>
    <% if @cake.photo.attached? %>
    <div class="row justify-content-center mb-3"><%= cl_image_tag @cake.photo.key, height: 300, width:
    300, radius: 20, crop: :scale %>
    </div>
    <% end %>
    <div class="outside-border outside-grey w-100">
      <p class="description">Payment methods offered </p>
      <div class="row justify-content-center">
        <div class="row justify-space-around">
          <% @payments.each_with_index do |payment, i| %>
            <div class="label-<%=((i+1) % 2)+1%> m-1"> <%=  payment %> </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="mt-3 outside-border outside-grey w-100">
      <p class="description">Description</p>
      <p class="mb-0"><%= @cake.description %></p>
    </div>
    <div class="mt-3 outside-border outside-grey w-100">
      <p class="description">Available slices</p>
      <p class="mb-0"><%= @cake.calculated_slices ? @cake.calculated_slices : @cake.available_slices %></p>
    </div>
    <div class="row justify-content-center">
      <div class="cake-button mt-2 w-75">
        <%= link_to "Request this Cake", new_cake_request_path(@cake) %>
      </div>
    </div>
  </div>
</div>

<% if @owner %>

  <form class="form-inline w-100 mt-3">
      <%= link_to cake_requests_path(@cake), { class: "btn-my_cake_request" } do %>
    <span class="label label-primary">My Cake Requests</span>
  <% end %>
  </form>

  <form class="form-inline w-100 mt-2">
    <%= link_to cake_path(@cake), { class: "btn-my_cake_delete", method: "delete", data: { confirm: "Are you sure, you want to delete this cake?" }} do %>
  <span class="label label-success">Delete Cake</span>
<% end %>
</form>
<% end %>
</div>







