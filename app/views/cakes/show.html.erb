<div class="text-center">
  <h1><%= @cake.name  %></h1>
  <div class="row justify-content-center">
    <%= cl_image_tag @cake.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
  <div class="row justify-content-center mt-3">
    <div class=" row justify-space-around">
      <% @payments.each_with_index do |payment, i| %>
        <div class="label-<%=i+1%>"> <%=  payment %> </div>
      <% end %>
    </div>
  </div>
  <div class="mt-3">
    <p><%= @cake.description  %></p>
  </div>
  <div class="row justify-content-center">
    <div class="cake-button pt-1 pb-1">
      <%= link_to "Requetst this Cake", new_cake_request_path(@cake) %>
    </div>
    </div>
    </div>
<% if @owner %>

    <form class="form-inline w-100 mt-3">
      <%= link_to cake_requests_path(@cake), { class: "btn btn-primary w-100" } do %>
    <span class="label label-primary">My Cake Requests</span>
  <% end %>
  </form>

  <form class="form-inline w-100 mt-2">
    <%= link_to cake_path(@cake), { class: "btn btn-outline-danger w-100", method: "delete" } do %>
  <span class="label label-success">Delete Cake</span>
<% end %>
</form>

<% end %>






