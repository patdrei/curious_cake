<div class="text-center">
  <h1><%= @cake.name  %></h1>
  <div class="row justify-content-center">
    <%= cl_image_tag @cake.photo.key, height: 300, width: 400, crop: :fill %>
  </div>
  <div class="row justify-content-center mt-3">
    <div class=" row justify-space-around">
      <div class="label-two mr-3 pt-1 pb-1">payment method 1</div>
      <div class="label-one pt-1 pb-1">payment method 2</div>
    </div>
  </div>
  <div class="mt-3">
    <p><%= @cake.description  %></p>
  </div>
  <div class="row justify-content-center">
    <div class="cake-button pt-1 pb-1">
      <%= link_to "request", new_cake_request_path(@cake) %>
    </div>
  </div>
</div>
