<div class="searchbar">
  <%= form_tag cakes_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control input-field-searchbar",
      placeholder: "Find a Cake"
      %>

    <%= submit_tag "Search", class: "btn btn-primary input-btn-searchbar w-100" %>
  <% end %>
</div>

<% @cakes.each do |cake| %>
<%= link_to cake_path(cake) do%>
  <div class="card-product">
    <% if cake.photo.attached? %>
      <%= cl_image_tag cake.photo.key, height: 300, width: 400, crop: :fill ,class: "img rounded ml-1"%>
    <% else %>
      <img src="https://images.squarespace-cdn.com/content/v1/59a2ccae6f4ca3e5e083e88f/1513817365291-66JTKOOZMX92XHITHXL5/ke17ZwdGBToddI8pDm48kKlCTFxidccknsm1vdd2hc9Zw-zPPgdn4jUwVcJE1ZvWQUxwkmyExglNqGp0IvTJZamWLI2zvYWH8K3-s_4yszcp2ryTI0HqTOaaUohrI8PIGrHOLo6PPE-cvgMUevVYsFUAYQrTS26zLAU8hbtgbMQKMshLAGzx4R3EDFOm1kBS/Kenwood_Jordan_Food%2829of32%29.jpg" class="img rounded ml-1">
    <% end  %>
    <div class="card-product-infos">
      <h2><%= cake.name %></h2>
      <p><%= cake.description %></p>
      <p><%= cake.calculated_slices ? cake.calculated_slices : cake.available_slices %></p>
    </div>
  </div>
<% end %>
<% end %>
